<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:background="@drawable/ic_bbg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imageview"
            android:src="@drawable/us"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:layout_height="80dp"></ImageView>
        <TextView
            android:textColor="#ff0"
            android:text="Hào Đoàn"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TEXT_NAME"
            ></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="#D12A24"
            android:layout_marginLeft="20dp"
            android:text="doansonghao@gmail.com"
            android:id="@+id/TEXT_Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textColor="#1710F6"
            android:id="@+id/TEXTrangThai"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:text="Online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

</LinearLayout>